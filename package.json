{
    "name": "react-to-do",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/skawaguchi/react-to-do.git",
    "author": "Stephen Kawaguchi <stephen.kawaguchi@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "react": "16.2.0",
        "react-dom": "16.2.0",
        "uniqid": "4.1.1"
    },
    "devDependencies": {
        "autoprefixer": "7.2.5",
        "babel-core": "6.26.0",
        "babel-eslint": "8.1.2",
        "babel-jest": "20.0.3",
        "babel-loader": "7.1.2",
        "babel-plugin-transform-object-rest-spread": "6.26.0",
        "babel-preset-env": "1.6.1",
        "babel-preset-react-app": "3.1.0",
        "chance": "1.0.13",
        "enzyme": "3.3.0",
        "enzyme-adapter-react-16": "1.1.1",
        "eslint": "4.10.0",
        "eslint-config-airbnb-base": "12.0.2",
        "eslint-config-react-app": "2.0.1",
        "eslint-loader": "1.9.0",
        "eslint-plugin-flowtype": "2.39.1",
        "eslint-plugin-import": "2.7.0",
        "eslint-plugin-jest": "21.2.0",
        "eslint-plugin-jsx-a11y": "5.1.1",
        "eslint-plugin-react": "7.4.0",
        "jest": "22.1.4",
        "parcel-bundler": "1.5.1",
        "postcss-modules": "1.1.0",
        "sinon": "4.2.2",
        "stylelint": "8.4.0",
        "stylelint-config-standard": "18.0.0"
    },
    "jest": {
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "coveragePathIgnorePatterns": [
            "./config"
        ],
        "modulePathIgnorePatterns": [
            "./config"
        ],
        "setupFiles": [
            "./config/raf-polyfill.js",
            "./config/test-setup.js"
        ],
        "verbose": true
    },
    "scripts": {
        "eslint": "npx eslint ./{src}/**/*.js --cache",
        "lint": "yarn eslint && yarn stylelint",
        "start": "parcel ./src/index.html",
        "stylelint": "npx stylelint 'src/**/*.css'",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "verify": "yarn lint && yarn test"
    }
}
