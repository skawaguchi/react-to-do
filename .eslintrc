{
    "env": {
        "browser": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "plugin:react/recommended"
    ],
    "globals": {
        "window": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "jest",
        "react"
    ],
    "rules": {
        "arrow-parens": [2, "always"],
        "class-methods-use-this": 0,
        "comma-dangle": [2, "never"],
        "complexity": [2, 4],
        "function-paren-newline": 0,
        "import/prefer-default-export": 0,
        "indent": [2, 4],
        "jest/no-disabled-tests": 2,
        "jest/no-focused-tests": 2,
        "jest/no-identical-title": 2,
        "jest/valid-expect": 2,
        "max-len": [2, {
            "code": 120
        }],
        "no-param-reassign": 0,
        "no-plusplus": [2, {
            "allowForLoopAfterthoughts": true
        }],
        "no-console": [2, {
            "allow": ["warn", "error"]
        }]
    }
}
